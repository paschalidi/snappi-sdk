{
  "name": "@reshot/snappi-action",
  "version": "0.1.0",
  "private": false,
  "description": "GitHub Action for Snappi Visual Testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@reshot-sdk/snappi": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.17.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}