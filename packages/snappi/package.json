{
  "name": "@reshot-sdk/snappi",
  "version": "0.1.0",
  "description": "Modern functional visual regression testing library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "snappi": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch && chmod +x dist/cli.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "lint": "eslint packages/snappi/src/**/*.ts",
    "format": "prettier --write \"packages/snappi/src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "../../README.md",
    "LICENSE"
  ],
  "keywords": [
    "visual-testing",
    "regression",
    "playwright",
    "screenshot",
    "testing",
    "storybook",
    "visual-regression",
    "ui-testing"
  ],
  "author": "Christos Paschalidis",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.49.1",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "glob": "^10.4.5",
    "ora": "^7.0.1",
    "pixelmatch": "^5.3.0",
    "pngjs": "^6.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.189",
    "@types/node": "^20.17.11",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/cli.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}